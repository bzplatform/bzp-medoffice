<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns = "http://java.sun.com/xml/ns/javaee" 
         version = "3.1"
         xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">
   <enterprise-beans>
      <session>
         <ejb-name>CrudService</ejb-name>
         <persistence-context-ref>
            <persistence-context-ref-name>persistence/medoffice</persistence-context-ref-name>
            <persistence-unit-name>medoffice</persistence-unit-name>
         </persistence-context-ref>
      </session>
      <session>
         <ejb-name>AuthenticationService</ejb-name>
         <persistence-context-ref>
            <persistence-context-ref-name>persistence/access-control</persistence-context-ref-name>
            <persistence-unit-name>access-control</persistence-unit-name>
         </persistence-context-ref>
      </session>
   </enterprise-beans>
</ejb-jar>